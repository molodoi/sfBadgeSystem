{% extends 'base.html.twig' %}


{% block body %}

    <div class="row">
        <div class="col-md-8">
            <h1>Ajouter un commentaire</h1>

            {% for comment in comments %}
                <p>
                    <strong>{{ comment.user.username }}</strong>
                    {{ comment.content }}
                </p>
            {% endfor %}

            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">Commenter</button>
            {{ form_end(form) }}
        </div>
        <div class="col-md-4">
            <h2>Mes Badges</h2>
            {% if badges is empty %}
                Vous n'avez pas de badge :(
            {% else %}
                <ul class="list-group">
                    {% for badge in badges %}
                        <li class="list-group-item">
                            {{ badge.name }}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
    </div>
{% endblock body %}